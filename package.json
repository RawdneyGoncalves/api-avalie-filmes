{
  "name": "api-avalie-filmes",
  "version": "1.0.0",
  "description": "API de Avaliação de Filmes usando Fastify e TypeORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "jest --config tsconfig.test.json",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/ormconfig.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/ormconfig.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/ormconfig.ts"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-oas": "^3.0.8",
    "inversify": "^6.0.2",
    "mysql2": "^3.11.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.6.3"
  }
}
